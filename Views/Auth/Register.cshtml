@model SafeVault.Models.RegisterRequest

<section class="auth-card">
    <h1 class="auth-title">Register</h1>
    <p class="auth-subtitle">Create a secure SafeVault account.</p>

    @if (!ViewData.ModelState.IsValid)
    {
        <ul class="error-list">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>@error.ErrorMessage</li>
        }
        </ul>
    }

    <form class="form-grid" action="/auth/register" method="post">
        @Html.AntiForgeryToken()
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="Username" value="@Model.Username" required pattern="^[a-zA-Z0-9_]{3,50}$" maxlength="50">
        </div>

        <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="Email" value="@Model.Email" required maxlength="100">
        </div>

        <div>
            <label for="password">Password</label>
            <div class="password-field">
                <input type="password" id="password" name="Password" required minlength="8" autocomplete="new-password">
                <button class="toggle-password" type="button" aria-label="Show password" data-toggle="password" data-target="password">
                    <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                        <path d="M12 5c-5 0-9.27 3.11-11 7.5C2.73 16.89 7 20 12 20s9.27-3.11 11-7.5C21.27 8.11 17 5 12 5zm0 12c-3.03 0-5.5-2.24-5.5-5s2.47-5 5.5-5 5.5 2.24 5.5 5-2.47 5-5.5 5zm0-8a3 3 0 1 0 0 6 3 3 0 0 0 0-6z" />
                    </svg>
                </button>
            </div>
        </div>

        <button class="btn" type="submit">Register</button>
    </form>

    <p class="link-row">
        Already have an account? <a href="/auth/login">Login</a>
    </p>
</section>
